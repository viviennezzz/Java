function truncateString(str, num) {
  if (str.length>num)
    {
      if(num>3)
        {
        str1 = str.slice(0,num-3);
        return str1 + "...";
        }
      else
        {
          str2 = str.slice(0,num);
          return str2 + "...";
        }
    }
  else
    return str;
}
  

truncateString("A-tisket a-tasket A green and yellow basket", 11);
